<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:gravity="end"
        android:background="@color/endColor"
        android:elevation="10dp"
        android:alpha="0.8"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/username_journal_list"
            android:layout_weight="1"
            android:padding="3dp"
            android:text="Bitaaaaa"
            android:textSize="17sp"
            android:gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/share_button"
            android:src="@android:drawable/ic_menu_share"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/journal_list_image"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:cropToPadding="true"
            android:src="@drawable/image_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="title"
            android:id="@+id/journal_list_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="thought"
            android:id="@+id/journal_list_thought"
            android:textSize="18sp"
            android:textStyle="normal"
            android:paddingTop="15dp"
            android:paddingEnd="15dp"
            android:paddingStart="10dp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/journal_list_timestamp"
            android:text="date created"
            android:textStyle="italic"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>



</androidx.cardview.widget.CardView>